header(class="bg-indigo-600 py-4")
    div(class="container mx-auto flex justify-between  items-center")
        a(href="/") 
            h2(class="text-2xl text-white font-extrabold text-center") Bienes
                span(class="font-normal") Raices
        nav(class="my-5 text-sm md:flex md:items-center md:gap-8 font-bold text-white hidden")
            if !usuario
                a(href="/auth/registro") Crear Cuenta
                a(href="/auth/login") Iniciar sesión
            else
                a(href="/mis-propiedades") Mis Propiedades
                a(href="") Mi Perfil
                form(action="/auth/cerrar-sesion" method="POST")
                    input(type="submit" class="bg-indigo-800 py-2 px-10 rounded-lg" value="Cerrar Sesión")
                    input(type="hidden" name="_csrf" value=csrfToken)
div(class="bg-indigo-700 py-5")
    div(class="container mx-auto flex justify-center flex-wrap flex-col-reverse md:flex-row lg:justify-between gap-4")
        nav(class="gap-4 items-center flex flex-col md:flex-row")
            each categoria in categorias
                a(href=`/categoria/${categoria.id}` class="text-sm font-bold uppercase text-white")= categoria.nombre+'s'
        form(action="/buscador" method="POST" class="flex gap-4 items-center justify-center md:justify-normal") 
            input(type="hidden" name="_csrf" value= csrfToken)
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="py-2 pl-2 pr-20 rounded-lg shadow text-sm")
            input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold py-2 px-8 cursor-pointer text-sm" value="Buscar")