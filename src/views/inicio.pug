extends ./layout/app
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido
    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicaci√≥n en el Mapa
        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm text-gray-800 font-bold")  Filtrar Propiedades:
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-20 text-gray-500 font-bold") Categorias
                select(id="categorias" class="flex-1 bg-white w-full px-1 py-2 border border-gray-300 rounded-md shadow") 
                    option(value="" ) - Seleccione -
                    each categoria in categorias
                        option(value=categoria.id )= categoria.nombre
    
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-20 text-gray-500 font-bold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-1 py-2 border border-gray-300 rounded-md shadow") 
                    option(value="" ) - Seleccione -
                    each precio in precios
                        option(value=precio.id )= precio.nombre
        div(id="mapa-inicio" class="h-[600px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en ventas
            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en ventas
            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    include ./templates/card
    
        


block script 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapaInicio.js")