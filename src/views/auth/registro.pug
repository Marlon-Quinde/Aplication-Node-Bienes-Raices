extends ../layout/index
block contenido
    div(class="flex w-full h-full justify-center items-center")
        div(class="w-11/12 sm:w-full")
            h1(class="text-4xl my-10 font-extrabold text-center") Bienes
                span(class="font-normal") Raices
            h2(class="text-center text-2xl font-extrabold")= pagina

            if errores
                div(class='max-w-md mx-auto my-10')
                    each error in errores
                        p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
            div(class="mt-8 mx-auto max-w-md")
                div(class="bg-white py-8 px-4 shadow")
                    form(action="/auth/registrar" class="space-y-5" method="POST" noValidate) 
                        input(type="hidden" name="_csrf" value= csrfToken)
                        div
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Nombre
                            input#nombre(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                        div
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email
                            input#email(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '')
                        div
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Contraseña
                            input#password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Escribe tu contraseña" type="password" name="password")
                        div
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir_password") Repite tu contraseña
                            input#repetir_password(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Vuelve a escribir tu contraseña" type="password" name="repetir_password")
                        div(class="flex items-center justify-between")
                            a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión
                            a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi contraseña
                        input(type="submit" value="Crear cuenta" class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer") 