extends ../layout/index
block contenido
    div(class="flex w-full h-full justify-center items-center")
        div(class="w-11/12 sm:w-full")
            h1(class="text-4xl my-10 font-extrabold text-center") Bienes
                span(class="font-normal") Raices
            h2(class="text-center text-2xl font-extrabold")=pagina
            if errores
                div(class='max-w-md mx-auto my-10')
                    each error in errores
                        p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
            div(class="mt-8 mx-auto max-w-md")
                div(class="bg-white py-8 px-4 shadow")
                    form(action="/auth/olvide-password" class="space-y-5" method="POST" noValidate) 
                        input(type="hidden" name="_csrf" value= csrfToken)
                        div
                            label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email de Registro
                            input#email(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" type="email" name="email")
                        div(class="flex items-center justify-between")
                            a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión
                            a(href="/auth/registro" class="text-gray-500 text-xs") ¿No tienes cuenta? Crea una
                        input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer")